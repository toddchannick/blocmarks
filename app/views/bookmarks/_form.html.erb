<%= simple_form_for @bookmark, html: { multipart: true } do |f| %>
  <% if @bookmark.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@bookmark.errors.count, "error") %> prevented this bookmark from saving.</h2>
      <ul>
        <%= @bookmark.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- <div class="form-group">
    <%= f.input :image, input_html: { class: 'form-control' } %>
  </div> -->

  <div class="form-group">
    <%= f.input :url, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :description, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.association :topic, :label_method => :title, value_method: :id %>
  </div>

  <%= link_to 'Cancel', bookmarks_path , class: "btn btn-default" %>
  <%= f.button :submit, class: 'btn btn-primary pull-right' %>

<% end %>
