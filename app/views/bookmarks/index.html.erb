<div class="row">
  <div class="col-xs-12">
    <div class = "btn-group pull-right">
      <% if user_signed_in? %>
        <button type = "button" class = "btn btn-primary dropdown-toggle" data-toggle = "dropdown">
          Add Bookmark
          <span class = "caret"></span>
        </button>
      <% end %>

       <ul class = "add-bookmark-menu dropdown-menu" role = "menu">
          <li><%= link_to "Add by URL", new_bookmark_path %></li>
          <li><a href = "#">Custom</a></li>
       </ul>
    </div>
  </div>
</div>
<br>

<!-- <%= link_to "Add Bookmark", new_bookmark_path, class: "btn btn-primary" %> -->
<div masonry="{ itemSelector: '.masonry-brick', columnWidth: 50, transitionDuration: 0, isFitWidth: true, isAnimated: !Modernizr.csstransitions }" id="masonry-container" reload-on-resize>
  <div class="masonry-brick col2 panel panel-default" ng-repeat="bookmark in bookmarks track by $index | filter:searchText">
    <div class="panel-heading fill">
      <a ng-href="/bookmarks/{{bookmark.id}}"><img src="{{bookmark.image}}" /></a>
    </div>
    <div class="panel-body">
      <span>
        <a ng-href="/bookmarks/{{bookmark.id}}">{{ bookmark.title }}</a>
      </span>
    </div>
    <div class="panel-footer">
      <div id="category-tags">
        <span id="tag">#{{ bookmark.topic.title }}</span>
      </div>
    </div>
  </div>
</div>
