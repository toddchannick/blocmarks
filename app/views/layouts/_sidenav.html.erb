<div class="side-nav">
  <% if user_signed_in? %>
    <form class="navbar-form" role="search">
      <div class="form-group search">
        <span class="fa fa-search"></span>
        <input id="quicksearch" ng-model="searchText" type="text" class="form-control" placeholder="Search by title" ng-model-options="{debounce : 600}" >
      </div>
      <!-- <button type="submit" class="btn btn-default">Search</button> -->
    </form>
  <% end %>

  <div class="side-categories">
    <% if user_signed_in? %>
      <span id="side-title">categories</span>
      <ul class="cat-list filter-group" id="filters">
        <li><a ui-sref="bookmarks">All</a></li>
          <% @topics.each do |topic| %>
            <li ng-click="catFilter('<%= topic.title %>')"><a><%= topic.title %></a></li>
          <% end %>
        <!-- <li ng-repeat="topic in topics">
          <a ng-href=""> {{ topic.title }} </a>
        </li> -->
      </ul>
    <% else %>
      <p class="summary">
        BlocMarks is a tool to help you save and manage your favorite bookmarks. We make it easy to find, categorize, and share links with friends. Get started with a free account, or <%= link_to "explore", bookmarks_path, class: "side-menu-link caps" %> popular bookmarks submitted by other users!
      </p>
    <% end %>
  </div>

</div>
